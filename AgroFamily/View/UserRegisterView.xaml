<UserControl x:Class="AgroFamily.View.UserRegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:AgroFamily.View" xmlns:viewmodel="clr-namespace:AgroFamily.ViewModel"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" >


    <UserControl.DataContext>
        <viewmodel:UserRegisterViewModel/>
    </UserControl.DataContext>

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="497*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="242*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border CornerRadius="0"
                Grid.Row="0"
                Margin="0" Grid.RowSpan="5" Grid.Column="3">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource secondaryBackColor1}"/>

            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="170"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,20,0,-145">
                    <Image Source="/Assets/user_reg.png" Height="222" Width="196"/>


                </StackPanel>
            </Grid>
        </Border>

        <Border CornerRadius="0"
                Grid.Row="6"
                Margin="0" Grid.Column="3">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource secondaryBackColor1}"/>
            </Border.Background>

        </Border>


        <Border x:Name="BDRounded" Grid.Row="5" Grid.Column="1" Grid.RowSpan="2" BorderThickness="0" CornerRadius="20" Background="{StaticResource Color5}">


            <DataGrid HorizontalGridLinesBrush="{StaticResource Color5}"
                      VerticalGridLinesBrush="{StaticResource Color5}"
                      Background="{StaticResource Color4}"
                      GridLinesVisibility="All"
                      RowDetailsTemplate="{DynamicResource DataGridRowDetailsTemplate1}" 
                      AutoGenerateColumns="False" 
                      CellStyle="{DynamicResource DataGridCellStyle1}" 
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}"
                      x:Name="membersDataGrid" 
                      ItemsSource="{Binding Path=Users,UpdateSourceTrigger=PropertyChanged}" Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" IsReadOnly="True" Width="*" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Nombre" IsReadOnly="True" Width="*" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Apellido" IsReadOnly="True" Width="*" Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Rol" IsReadOnly="True" Width="*" Binding="{Binding Type}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border CornerRadius="20"
                Grid.Row="1" Margin="3,11,0,44" Grid.RowSpan="4" Grid.Column="1">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource secondaryBackColor1}"/>
            </Border.Background>

            <Grid Margin="5">

                <Grid.RowDefinitions >
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>

                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250*"/>
                    <ColumnDefinition Width="210*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Añada un usuario al sistema"
                           Margin="10"
                           Style="{StaticResource titleStyle3}"/>
                <!--Name Box-->
                <StackPanel Margin="20,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="ID (Rut)"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Id"
                                 Text="{Binding Id,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>
                <!--Type List Box-->

                <StackPanel Grid.Row="1"
                            Margin="20,0,0,0"
                            Orientation="Horizontal" Grid.Column="1" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Rol" Height="20" />
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <ComboBox Margin="10,6"
                                  ItemsSource="{Binding Path=TypeUser}"
                                  SelectedItem="{Binding Path=Type}"
                                  DisplayMemberPath="Name">
                        </ComboBox>
                    </Border>
                </StackPanel>
                <!--name Box-->
                <StackPanel Margin="20,0,0,0"
                    Grid.Row="2"
                            Orientation="Horizontal" Grid.Column="0" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Nombre"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="name"
                                 Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>
                <!--lastname Box-->
                <StackPanel Margin="-10,0,0,0"
                            Grid.Row="2"
                            Orientation="Horizontal" Grid.Column="1" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Apellido"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Lastname"
                                 Text="{Binding Lastname,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>

                <!--password Box-->
                <StackPanel Margin="0,0,0,0"
                            Grid.Row="3"
                            Orientation="Horizontal" Grid.Column="0" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Contraseña"
                               Width="70" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Password"
                                 Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>

                <Button x:Name="addUser"
                Style="{StaticResource button_tr}"
                Content="Confirmar"
                Command="{Binding AddUserCommand}" Margin="40,5,10,5" Grid.Row="3" Grid.Column="1"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
