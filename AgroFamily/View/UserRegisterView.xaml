        <Border CornerRadius="20"
                Grid.Row="0" Margin="25,25,301,44" Grid.RowSpan="5">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource secondaryBackColor1}"/>
            </Border.Background>

            <Grid Margin="5">

                <Grid.RowDefinitions >
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>

                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Añada un usuario al sistema"
                           Margin="10"
                           Style="{StaticResource titleStyle3}"/>
                <!--Name Box-->
                <StackPanel Margin="20,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="ID (Rut)"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Id"
                                 Text="{Binding Id,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>
                <!--Type List Box-->

                <StackPanel Grid.Row="1"
                            Margin="20,0,0,0"
                            Orientation="Horizontal" Grid.Column="1" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Rol" Height="20" />
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <ComboBox Margin="10,6"
                                  ItemsSource="{Binding Path=TypeUser}"
                                  SelectedItem="{Binding Path=Type}"
                                  DisplayMemberPath="Name">
                        </ComboBox>
                    </Border>
                </StackPanel>
                <!--name Box-->
                <StackPanel Margin="20,0,0,0"
                    Grid.Row="2"
                            Orientation="Horizontal" Grid.Column="0" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Nombre"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="name"
                                 Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>
                <!--lastname Box-->
                <StackPanel Margin="-10,0,0,0"
                            Grid.Row="2"
                            Orientation="Horizontal" Grid.Column="1" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Apellido"
                               Width="50" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Lastname"
                                 Text="{Binding Lastname,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>

                <!--password Box-->
                <StackPanel Margin="0,0,0,0"
                            Grid.Row="3"
                            Orientation="Horizontal" Grid.Column="0" >
                    <TextBlock Style="{StaticResource textStyle3}"
                               Text="Contraseña"
                               Width="70" Height="20"/>
                    <Border CornerRadius="10"
                            Margin="5"
                            Width="150" Height="40">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource secondaryBackColor2}"/>
                        </Border.Background>
                        <TextBox x:Name="Password"
                                 Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource textBox}"
                                 Background="Transparent"
                                 Margin="15,0"
                                 Height="20"/>
                    </Border>
                </StackPanel>

                <Button x:Name="addUser"
                Style="{StaticResource button_tr}"
                Content="Confirmar"
                Command="{Binding AddUserCommand}" Margin="40,5,10,5" Grid.Row="3" Grid.Column="1"/>





            </Grid>
        </Border>
    </Grid>
